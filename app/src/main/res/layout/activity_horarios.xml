<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.Horarios"
    android:orientation="vertical">

    <fragment
        android:id="@+id/frgmt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:name="com.example.bihar.view.fragments.ToolBar"
        tools:layout="@layout/fragment_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/verde">
            <ImageView
                android:id="@+id/horarios_biflechaIzq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_biflecha_izquierda"
                android:layout_margin="5dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/verde">
            <ImageView
                android:id="@+id/horarios_uniflechaIzq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_uniflecha_izquierda"
                android:layout_margin="5dp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/horario_diaSemana"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/blanco"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@color/verde"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/verde">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_uniflecha_derecha"
                android:layout_margin="5dp"
                android:id="@+id/horarios_uniflechaDer"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/verde">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_biflecha_derecha"
                android:layout_margin="5dp"
                android:id="@+id/horarios_biflechaDer"/>
        </RelativeLayout>



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_uniflecha_derecha"/>

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horario_lista"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

</LinearLayout>